{
    "name": "next-boilerplate",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "watch": "next dev",
        "build": "next build",
        "build:prod": "cross-env NEXT_PUBLIC_ASSET_PREFIX=/business next build",
        "ba": "cross-env ANALYZE=true next build",
        "start": "PORT=3018 node server.js",
        "lint": "next lint",
        "format": "prettier --ignore-unknown --write \"src/**/*\"",
        "tsc": "tsc --noEmit --pretty",
        "subsetting": "node ./subset-fonts.js",
        "storybook": "storybook dev -p 6006",
        "test-storybook": "test-storybook",
        "build-storybook": "storybook build -o storybook",
        "test": "jest ./src --passWithNoTests",
        "test:ci": "jest ./src --passWithNoTests --ci --maxWorkers=1 --reporters=default --reporters=jest-junit --watchAll=false",
        "test:watch": "jest ./src --watch",
        "test:general": "npx playwright test tests/general/*",
        "test:general:ci": "dotenv -- npm run test:general",
        "test:lh": "npx playwright test tests/lighthouse/* --config=playwright.config.lighthouse.ts",
        "test:screenshot": "npx playwright test tests/screenshot/* --config=playwright.config.screenshot.ts",
        "test:screenshot:update": "npx playwright test tests/screenshot/* --config=playwright.config.screenshot.ts --update-snapshots",
        "test:all": "npm run test:lh && npm run test:general",
        "prepare": "cd .. && husky install frontend/.husky"
    },
    "browserslist": [
        "Android >= 10",
        "iOS >= 14",
        "Safari >= 14",
        "last 2 Edge versions",
        "last 2 Chrome versions",
        "last 2 ChromeAndroid versions",
        "last 2 Firefox versions",
        "last 2 Opera versions"
    ],
    "dependencies": {
        "@playwright/test": "^1.41.1",
        "@types/node": "^20.10.6",
        "@types/react": "^18.2.46",
        "@types/react-dom": "^18.2.18",
        "axios": "^1.6.7",
        "classnames": "^2.5.1",
        "dotenv": "^16.4.0",
        "dotenv-cli": "^7.3.0",
        "eslint": "^8.56.0",
        "eslint-config-next": "^13.5.6",
        "formik": "^2.4.5",
        "framer-motion": "^11.0.3",
        "intl-tel-input": "^18.1.5",
        "jest-junit": "^16.0.0",
        "lodash.debounce": "^4.0.8",
        "msw": "^1.3.2",
        "next": "^13.5.6",
        "raw-loader": "^4.0.2",
        "react": "^18.2.0",
        "react-cookie": "^7.0.0",
        "react-dom": "^18.2.0",
        "react-imask": "^7.3.0",
        "recoil": "^0.7.7",
        "sass-loader": "^13.3.3",
        "sharp": "^0.32.6",
        "swiper": "^8.4.7",
        "typograf": "^7.3.0",
        "usehooks-ts": "^2.14.0",
        "vanilla-lazyload": "^17.8.5",
        "yup": "^1.3.3"
    },
    "devDependencies": {
        "@mdx-js/react": "^3.0.0",
        "@next/bundle-analyzer": "^13.5.6",
        "@storybook/addon-a11y": "^7.6.10",
        "@storybook/addon-actions": "^7.6.10",
        "@storybook/addon-designs": "^7.0.7",
        "@storybook/addon-docs": "^7.6.10",
        "@storybook/addon-essentials": "^7.6.10",
        "@storybook/addon-interactions": "^7.6.10",
        "@storybook/addon-links": "^7.6.10",
        "@storybook/addon-styling": "^1.3.7",
        "@storybook/jest": "^0.2.3",
        "@storybook/mdx2-csf": "^1.1.0",
        "@storybook/nextjs": "^7.6.10",
        "@storybook/react": "^7.6.10",
        "@storybook/test-runner": "^0.16.0",
        "@storybook/testing-library": "^0.2.2",
        "@svgr/webpack": "^8.1.0",
        "@testing-library/jest-dom": "^6.1.6",
        "@testing-library/react": "^14.1.2",
        "@types/html-validator": "^5.0.6",
        "@types/intl-tel-input": "^18.1.4",
        "@types/lodash.debounce": "^4.0.9",
        "@types/sharp": "^0.31.1",
        "autoprefixer": "^10.4.16",
        "axe-core": "^4.8.3",
        "cross-env": "^7.0.3",
        "cssnano": "^6.0.2",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-storybook": "^0.6.15",
        "glslify-loader": "^2.0.0",
        "html-validator": "^6.0.1",
        "husky": "^8.0.3",
        "jest-environment-jsdom": "^29.7.0",
        "lighthouse": "^11.4.0",
        "lint-staged": "^15.2.0",
        "msw-storybook-addon": "^1.10.0",
        "playwright": "^1.41.1",
        "postcss-clamp": "^4.1.0",
        "postcss-easings": "^4.0.0",
        "postcss-focus-visible": "^9.0.1",
        "postcss-focus-within": "^8.0.1",
        "postcss-font-display": "^0.3.0",
        "prettier": "^3.1.1",
        "sass": "^1.69.7",
        "storybook": "^7.6.10",
        "storybook-addon-swc": "^1.2.0",
        "storybook-design-token": "^3.0.0-beta.7",
        "tsconfig-paths-webpack-plugin": "^4.1.0",
        "typescript": "^5.1.0"
    },
    "msw": {
        "workerDirectory": "public"
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "src/**/*.{md,mdx,css,scss}": "prettier --write"
    }
}
